{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
  },
  "env": {
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": ["eslint-plugin-prettier", "eslint-plugin-flowtype"],
  "rules": {
    "flowtype/define-flow-type": 1,
    "prettier/prettier": [
      "error",
      {
        trailingComma: "all",
        bracketSpacing: false
      }
    ]
  }
}
